# PTS Controller WebSocket Server Environment Variables
# Copy this file to .env and modify the values as needed

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server port (default: 3000)
PORT=3000

# Server host/IP to bind to (default: 0.0.0.0 - all interfaces)
HOST=0.0.0.0

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================

# WebSocket path endpoint (default: /ptsWebSocket)
# This is the URI path that PTS controllers will use to connect
# IMPORTANT: PTS controller GUI expects this WITHOUT starting slash
WS_PATH=/ptsWebSocket

# =============================================================================
# PTS CONTROLLER SPECIFIC SETTINGS
# =============================================================================

# Maximum packet ID value (1-65535 as per documentation)
PTS_MAX_PACKET_ID=65535

# Ping interval in milliseconds (30 seconds as per documentation)
PTS_PING_INTERVAL=30000

# Connection timeout in milliseconds
PTS_CONNECTION_TIMEOUT=30000

# Maximum PTS ID length (24 hexadecimal digits as per documentation)
PTS_MAX_ID_LENGTH=24

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable console logging (true/false)
LOG_ENABLE_CONSOLE=true

# Enable file logging (true/false)
LOG_ENABLE_FILE=true

# Log directory path
LOG_DIR=logs

# Log retention in days (default: 30)
LOG_RETENTION_DAYS=30

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# CORS origin (use * for development, specific domain for production)
CORS_ORIGIN=*

# Enable CORS credentials (true/false)
CORS_CREDENTIALS=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Enable authentication for WebSocket connections (true/false)
# Set to true in production environments
ENABLE_AUTH=false

# JWT secret for authentication (if enabled)
JWT_SECRET=your-super-secret-jwt-key-here

# Rate limiting - max connections per IP
MAX_CONNECTIONS_PER_IP=10

# Rate limiting - max messages per minute per connection
MAX_MESSAGES_PER_MINUTE=100

# =============================================================================
# DATABASE CONFIGURATION (Optional)
# =============================================================================

# Database type (mongodb, postgresql, mysql, redis)
# Leave empty if not using database integration
DB_TYPE=

# Database connection string
DB_CONNECTION_STRING=

# Database host
DB_HOST=localhost

# Database port
DB_PORT=27017

# Database name
DB_NAME=pts_controller

# Database username
DB_USERNAME=

# Database password
DB_PASSWORD=

# =============================================================================
# MONITORING & METRICS
# =============================================================================

# Enable metrics collection (true/false)
ENABLE_METRICS=false

# Metrics port (default: 9090)
METRICS_PORT=9090

# Enable health check endpoint (true/false)
ENABLE_HEALTH_CHECK=true

# Health check interval in milliseconds
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# NOTIFICATION CONFIGURATION (Optional)
# =============================================================================

# Enable email notifications (true/false)
ENABLE_EMAIL_NOTIFICATIONS=false

# SMTP host
SMTP_HOST=smtp.gmail.com

# SMTP port
SMTP_PORT=587

# SMTP username (email)
SMTP_USERNAME=

# SMTP password (app password for Gmail)
SMTP_PASSWORD=

# Notification email recipients (comma-separated)
NOTIFICATION_EMAILS=

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Node environment (development, production, test)
NODE_ENV=development

# Enable HTTPS/WSS in production (true/false)
ENABLE_HTTPS=false

# SSL certificate path (if HTTPS enabled)
SSL_CERT_PATH=

# SSL private key path (if HTTPS enabled)
SSL_KEY_PATH=

# =============================================================================
# DEBUG & DEVELOPMENT
# =============================================================================

# Enable debug mode (true/false)
DEBUG=false

# Enable verbose logging (true/false)
VERBOSE_LOGGING=false

# Enable request/response logging (true/false)
LOG_REQUESTS=false

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Maximum concurrent WebSocket connections
MAX_CONNECTIONS=1000

# WebSocket message buffer size
WS_BUFFER_SIZE=65536

# HTTP request timeout in milliseconds
HTTP_TIMEOUT=30000

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================

# Enable automatic log rotation (true/false)
ENABLE_LOG_ROTATION=true

# Log rotation size in MB
LOG_ROTATION_SIZE=100

# Enable automatic backup (true/false)
ENABLE_BACKUP=false

# Backup directory path
BACKUP_DIR=backups

# Backup retention in days
BACKUP_RETENTION_DAYS=7 